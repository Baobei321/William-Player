{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "jsx": "preserve",
    "allowJs":true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    // "typeRoots": [
    //   "./node_modules/@types",
    //   "./src/types"  // 如果有自定义类型目录
    // ],
    "types": ["@dcloudio/types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js",
    "shims-uni.d.ts"  // 明确包含这个文件
  ],
  "exclude": [
    "node_modules",
    "unpackage",
    "dist",
    "src/**/*.nvue"
  ]
}